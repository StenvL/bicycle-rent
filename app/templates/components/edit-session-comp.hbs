            {{#if (equal employeeItem.id session.employeeTake)}}
                <option selected value={{employeeItem.id}}>
                    {{listing-employee-comp employee=employeeItem}}
                </option>
            {{else}}
                <option value={{employeeItem.id}}>
                    {{listing-employee-comp employee=employeeItem}}
                </option>
            {{/if}}
        {{/each}}
    </select>
</p>

<p>Время выдачи:
    {{#if session.giveDate}} 
        {{input type="datetime-local" 
            value=(date-to-iso-format session.giveDate)
            id="giveDatePicker"}}
    {{else}}
        {{input type="datetime-local"}}
    {{/if}}
</p>

<p>Время сдачи:
    {{#if session.returnDate}}
        {{input type="datetime-local" 
            value=(date-to-iso-format session.returnDate) 
            id="returnDatePicker"}}
    {{else}}
        {{input type="datetime-local"}}
    {{/if}}
</p>

